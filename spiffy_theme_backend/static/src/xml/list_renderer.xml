<templates id="template" xml:space="preserve">
    <t t-inherit="web.ListRenderer.RecordRow" t-inherit-mode="extension" >
        <xpath expr="//tr[hasclass('o_data_row')]" position="attributes">
            <attribute name="t-att-resId">record.resId</attribute>
        </xpath>
    </t>

    <t t-inherit="web.ListRenderer" t-name="spiffy_split_view.ListRenderer" t-inherit-mode="extension">
        <xpath expr="//table[contains(@t-attf-class, 'o_list_table')]/thead/tr" position="after">
            <t t-if="!this.isX2Many">
                <tr t-att-data-js="filterRow" t-attf-class="filter_row">
                    <td t-if="hasSelectors"></td>
                    <t t-foreach="columns" t-as="column" t-key="column.id">
                        <td t-if="column.type === 'field'">
                            <div>
                                <div>
                                    <!-- If field is Many2one -->
                                    <div class="input-group">
                                        <div class="form-control d-flex align-items-center py-0 px-0 me-1 focus">
                                            <input type="text"
                                                class="form-control form-control-sm column-filter border-0"
                                                t-att-data-column="column.name"
                                                t-att-data-field-type="column.fieldType"
                                                t-att-data-fieldname="column.string"
                                                placeholder="Type here..."
                                                t-on-click="onColumnFilter"
                                                t-on-keydown="onColumnFilter"/>
                                        
                                            <span>
                                                <button type="button"
                                                    class="btn btn-sm domain-filter-btn"
                                                    t-att-data-column="column.name"
                                                    t-att-data-field-type="column.fieldType"
                                                    t-on-click="onDomainFilterClick"
                                                    title="Advanced Filter">
                                                    <i class="fa fa-filter"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td t-else=""></td>
                    </t>
                    <td t-if="hasOpenFormViewColumn"></td>
                    <td t-if="hasActionsColumn"></td>
                </tr>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('o_list_renderer')]" position="before">
            <div class="spiffy_list_view" t-att-class="{'overflow-auto': !this.isX2Many}"></div>
            <SplitviewContainer t-if="SplitViewForm.show" t-props="getSplitviewContainerProps()"/>
        </xpath>
        <xpath expr="//div[hasclass('spiffy_list_view')]" position="inside">
            <xpath expr="//div[hasclass('o_list_renderer')]" position="move" />
        </xpath>
    </t>       
</templates>